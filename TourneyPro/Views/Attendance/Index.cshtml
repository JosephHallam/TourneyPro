@model IEnumerable<TourneyPro_Data.Attendance>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>
@Html.ActionLink("Register to Event", "Create", "Attendance")
<table class="table">
    <tr>
        <th>@Html.DisplayNameFor(x => x.Id)</th>
        <th>@Html.DisplayNameFor(x => x.EventName)</th>
        <th>@Html.DisplayNameFor(x => x.UserName)</th>
        <th>@Html.DisplayNameFor(x => x.isPlayer)</th>
    </tr>
    @foreach(var item in Model)
    {
<tr>
    <td>@Html.DisplayFor(x => item.Id)</td>
    <td>@Html.DisplayFor(x => item.EventName)</td>
    <td>@Html.DisplayFor(x => item.UserName)</td>
    <td>@Html.DisplayFor(x => item.isPlayer)</td>
    <td>
        @Html.ActionLink("More Info", "Details", new { id = item.Id }) |
        @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
        @Html.ActionLink("Remove", "Delete", new { id = item.Id }) 
    </td>
</tr>
    }
</table>