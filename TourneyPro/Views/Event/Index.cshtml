@model IEnumerable<TourneyPro_Data.Event>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>
@Html.ActionLink("Register New Event", "Create", "Event",null, new { Style = "font-size: 1.2rem;"})
<table class="table">
    <tr>
        <th>@Html.DisplayNameFor(x => x.Id)</th>
        <th>@Html.DisplayNameFor(x => x.Name)</th>
        <th>@Html.DisplayNameFor(x => x.Description)</th>
        <th>@Html.DisplayNameFor(x => x.TournamentName)</th>
        <th>@Html.DisplayNameFor(x => x.GamePlayed)</th>
        <th>@Html.DisplayNameFor(x => x.EventBeginning)</th>
        <th>@Html.DisplayNameFor(x => x.EventFee)</th>
        <th>@Html.DisplayNameFor(x => x.Payout)</th>
    </tr>
    @foreach (TourneyPro_Data.Event item in Model)
    {
        <tr>
            <td>@Html.DisplayFor(x => item.Id)</td>
            <td>@Html.DisplayFor(x => item.Name)</td>
            <td>@Html.DisplayFor(x => item.Description)</td>
            <td>@Html.DisplayFor(x => item.TournamentName)</td>
            <td>@Html.DisplayFor(x => item.GamePlayed)</td>
            <td>@Html.DisplayFor(x => item.EventBeginning)</td>
            <td>@Html.DisplayFor(x => item.EventFee)</td>
            <td>@Html.DisplayFor(x => item.Payout)</td>
            <td>
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Remove", "Delete", new { id = item.Id })
            </td>
        </tr>
    }
</table>
