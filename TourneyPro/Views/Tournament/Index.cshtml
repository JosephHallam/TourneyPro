@model IEnumerable<TourneyPro_Data.Tournament>

@{
    ViewBag.Title = "Index";
}
<style>
    input{
        border-radius: 0.5rem;
    }
    #filterButton:hover{
        background-color: lightgreen; 
    }
</style>
<h2>Index</h2>

@Html.ActionLink("Create New Tournament", "Create", "Tournament",null,new { Style = "font-size: 1.2rem;"})
<form asp-controller="Tournament" asp-action="Index">
    <p>Tournament Name: <input type="text" name="SearchString" placeholder=""/>
    <input type="submit" value="Filter" id="filterButton"/>
    </p>
</form>
<table class="table">
    <tr>
        <th>@Html.DisplayNameFor(x => x.Id)</th>
        <th>@Html.DisplayNameFor(x => x.Name)</th>
        <th>@Html.DisplayNameFor(x => x.TournamentBeginning)</th>
        <th>@Html.DisplayNameFor(x => x.ListOfEventNames)</th>
    </tr>
    @foreach(var item in Model)
    {
<tr>
    <td>@Html.DisplayFor(x => item.Id)</td>
    <td>@Html.DisplayFor(x => item.Name)</td>
    <td>@Html.DisplayFor(x => item.TournamentBeginning)</td>
    <td>@Html.DisplayFor(x => item.ListOfEventNames)</td>
    <td>
        @Html.ActionLink("More Info", "Details", new { id = item.Id }) |
        @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
        @Html.ActionLink("Remove", "Delete", new { id = item.Id }) 
    </td>
</tr>
    }
</table>